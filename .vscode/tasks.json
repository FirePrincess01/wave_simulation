{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "rust: cargo run"
		},
		{
			"type": "shell",
			"command": "wasm-pack build --target web",
			"problemMatcher": [
				"$rustc"
			],
			"label": "wasm-pack"
		},
		{
			"type": "shell",
			"command": "python3 -m http.server 8000",
			"label": "python server (linux)",
			"problemMatcher": []
		}
	]
}